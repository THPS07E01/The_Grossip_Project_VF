<% flash.each do |key, value| %>
<div class="alert alert-<%= key %> alert-dismissible">
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  <%= value %>
</div>
<% end %>


<section class="d-flex justify-content-center mt-4">
<div >
<br/>


<div class="d-flex justify-content-center">
  <h3 class="text-primary"><strong><%= Gossip.find(params[:id]).title %></strong></h3>
</div>
<div class="d-flex justify-content">
  <h4 class="font-italic text-secondary">- <%= Gossip.find(params[:id]).content %></h4>
</div>
<div class="d-flex justify-content-end">
  <h6>by- <%= link_to "#{@gossip_user_username}", user_path(@gossip_user_id) %></h6>
</div>
<div class="d-flex justify-content-center">
  <p><strong>Commentaires</strong> :</p>
</div>

    <% Gossip.find(params[:id]).comments.each do |comment| %>
    <p> 
      <span class="text-info"> <%= User.find(comment.user_id).username %> </span>
      -
      <%= comment.content %><br/>
    </p>
    <% end %>
  </div>
  </section>

  <section class="d-flex justify-content-center ">
    <form action='/comments/' method='POST'>
        <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
        <input type='hidden' name='gossip_id' value='<%= @gossip_id %>'>
        <div class="d-flex justify-content-center">
          <input type='text' name='comment_content' placeholder='Ton commentaire' /><br/>
          <button type="submit" title="Envoyer" class="btn btn-md btn-default text-primary"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
        </div>
    </form>
  </section>


<% if logged_in? && current_user.id == Gossip.find(params[:id]).user_id %>
<div>
          <a  href="<%= edit_gossip_path(Gossip.find(params[:id]).user_id) %>"><i class="mr-3 ml-3 fas fa-pencil-alt"></i> </a>
          <a href="<%= gossip_path(Gossip.find(params[:id]).user_id) %>" data-confirm="Etes-vous sÃ»r ?" data-method="DELETE"><i class="fas fa-trash-alt"></i></a>
          <% else %>
          <% end %>
</div>
