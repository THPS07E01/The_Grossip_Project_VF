<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class="d-flex justify-content-center mt-3">

  <h1 class="text-primary">Bienvenue sur Grossip.com, la plateforme n°1 de création de Grossips !</h1><br/>

	<br/>
	
</div>
<div class="d-flex justify-content-center">
	<h4 class="text-secondary">Il y a déjà <%= Gossip.all.length %> crevards qui ont balancé des ragôts.</h4>
	<br/>
	
</div>

<br/>

<section class="mx-auto" style="width: 1000px;">
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">User</th>
      <th scope="col">Created</th>
      <th scope="col">Title</th>
			<th scope="col">Link</th>
    </tr>
  </thead>

  <tbody>
	<% Gossip.all.each_with_index do |gossip, i| %>
    <tr>
      <th scope="row"><%= gossip.id %></th>
      <td><%= gossip.user.username %></td>
      <td><%= gossip.created_at.strftime("%F %T") %></td>
      <td><%= gossip.title %></td>
			<td><%= link_to 'Voir plus', gossip_path(i+1) %></td>
    </tr>
	<% end %>
  </tbody>
</table>
<section>