<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class="d-flex justify-content-center mt-3">

  <h1 class="text-primary">Liste des Grossips</h1><br/>

	<br/>
	
</div>
<div class="d-flex justify-content-center">
	<h4 class="text-secondary">Il y a déjà <%= Gossip.all.length %> crevards qui ont balancé des ragôts.</h4>
	<br/>
	
</div>

<br/>

<script>
$(document).ready(function() {
    $('#test').DataTable();
} );
</script>

<section class="mx-auto" style="width: 1000px;">
<table id="test" class="table table-striped table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">User</th>
      <th scope="col">Created</th>
      <th scope="col">Title</th>
			<th scope="col" class="text-center">Link</th>
    </tr>
  </thead>

  <tbody >
	<% Gossip.all.reverse.each do |gossip| %>
    <tr>
      <th scope="row" data-defaultsign="month" data-sortcolumn="1" data-sortkey="1-1"><%= gossip.id %></th>
      <td><%= link_to "#{gossip.user.username}", user_path(gossip.user.id) %></td>
      <td><%= gossip.created_at.strftime("%F %T") %></td>
      <td class="font-italic"><%= gossip.title %></td>
			<td  class="text-center">
          <a href="<%= gossip_path(gossip.id) %>">[VIEW] </a>    
          <a href="<%= edit_gossip_path(gossip.id) %>">[EDIT]</a>
          <a href="<%= gossip_path(gossip.id) %>" data-confirm="Etes-vous sûr ?" data-method="DELETE">[DELETE]</a>
      </td>
    </tr>
	<% end %>
  </tbody>
</table>
<section>

