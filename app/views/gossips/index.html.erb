<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class="d-flex justify-content-center mt-3">

  <h1 class="text-primary">Bienvenue sur Grossip.com, la plateforme n°1 de création de Grossips !</h1><br/>

	<br/>
	
</div>
<div class="d-flex justify-content-center">
	<h4 class="text-secondary">Il y a déjà <%= Gossip.all.length %> crevards qui ont balancé des ragôts.</h4>
	<br/>
	
</div>

<br/>

<section class="d-flex justify-content-center flex-wrap">
<% Gossip.all.each_with_index do |gossip, i| %>

	<div class="card border-dark mb-3" style="min-width: 18rem; max-width: 18rem;">
	  <div class="card-header text-center text-primary text-capitalize"><strong><%= gossip.user.username %></strong></div>
	  <div class="card-body text-center">
	    <h5 class="card-title text-dark"><%= gossip.title %></h5>
	    <p class="card-text text-link"><%= link_to 'Voir plus', gossip_path(i+1) %></p>
	  </div>
	</div>

<% end %>
</section>