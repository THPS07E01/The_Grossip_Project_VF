<section>
  <p>Prénom : <%= User.find(params[:user_id]).first_name %></p>
  <p>Nom : <%= User.find(params[:user_id]).last_name %></p>
  <p>Pseudo : <%= User.find(params[:user_id]).username %></p>
  <p>Age : <%= User.find(params[:user_id]).age %></p>
  <p>Email : <%= User.find(params[:user_id]).email %></p>
  <p>Ville : <%= User.find(params[:user_id]).city %></p>
  <p>Description : <%= User.find(params[:user_id]).description %></p>
  <p>Les gossips posté :</p>
  <% User.find(42).gossips.each do |gossip| %>
  <p>
    <%= gossip.title %><br/>
    <%= gossip.content %><br/>
    <%= link_to 'Voir le gossip', gossips_path(gossip.id) %>
  </p>
  <% end %>
</section>