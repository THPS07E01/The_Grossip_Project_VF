<section class="d-flex justify-content-center mt-4">
<div class="w-50 ">
<div class="d-flex justify-content-center mt-3">
    <h1 class="text-danger"><%= User.find(params[:id]).username %></h1><br>
</div>
<div class="d-flex justify-content-center">
	<h4 class="text-secondary font-italic "><%= User.find(params[:id]).description %></h4>
</div>


  <p class="d-flex justify-content-center"><strong>Prénom</strong> : <%= User.find(params[:id]).first_name %></p>
  <p class="d-flex justify-content-center"><strong>Nom</strong> : <%= User.find(params[:id]).last_name %></p>
 
  <p class="d-flex justify-content-center"><strong>Age</strong> : <%= User.find(params[:id]).age %></p>
  <p class="d-flex justify-content-center"><strong>Email</strong> : <%= User.find(params[:id]).email %></p>
  <p class="d-flex justify-content-center"><strong>Ville</strong> :  <a href="<%= city_path(User.find(params[:id]).city.id) %>"><%= User.find(params[:id]).city.name %></a></p>
  <p class="d-flex justify-content-center"><strong>Gossips postés</strong> :</p>
  <% User.find(params[:id]).gossips.each do |gossip| %>
 <div class="card">
  <div class="card-header">
  <h5 class="card-title d-flex justify-content-center"><%= gossip.title %></h5>
  </div>
  <div class="card-body">
    
    <p class="card-text"><%= gossip.content %></p>
    <p class="far fa-eye text-primary "><%= link_to 'Voir le gossip', gossip_path(gossip.id) %></p>
  </div>
</div>
  <% end %>
</div>
</div>
</section>